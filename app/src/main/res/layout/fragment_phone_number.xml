<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="24dp"
        tools:context=".fragments.PhoneNumberFragment">


        <TextView
            android:textSize="48sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="Logo"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_enter_signUp"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintEnd_toStartOf="parent"
            android:text="ورود | ثبت نام"
            android:layout_marginTop="48dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

         <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_phone_number"
            app:layout_constraintTop_toBottomOf="@id/tv_enter_signUp"
            app:layout_constraintEnd_toStartOf="parent"
            android:text="لطفا شماره موبایل خود را وارد نمایید"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:background="@drawable/phone_edit_text_shape"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/tv_phone_number"
            android:id="@+id/et_phone_number"
            android:gravity="end"
            android:textColor="#535353"
            android:paddingHorizontal="16dp"
            android:inputType="number"
            android:textSize="12sp"
            android:paddingVertical="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="18sp"
            android:background="@drawable/btn_input_shape"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingVertical="4dp"
            android:gravity="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/et_phone_number"
            android:text="ورود"
            android:id="@+id/btn_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>